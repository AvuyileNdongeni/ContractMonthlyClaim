<Window x:Class="ContractMonthlyClaimSystemWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Dashboard" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Contract Monthly Claim System" 
                       FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <WrapPanel>
                <Button Content="Submit New Claim" Width="150" Height="40" Margin="5"/>
                <Button Content="Track My Claims" Width="150" Height="40" Margin="5"/>
                <Button Content="Upload Documents" Width="150" Height="40" Margin="5"/>
            </WrapPanel>

            <DataGrid AutoGenerateColumns="False" Height="200" Margin="0,20,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ClaimID" Binding="{Binding ClaimId}"/>
                    <DataGridTextColumn Header="Month/Year" Binding="{Binding MonthYear}"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount}"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
